<%= simple_form_for([@post, @post.comments.build]) do |f| %>
  <div class="field">
    <div class="control">
      <%= f.input :name, input_html: {class: 'input'}, wrapper: false, label_html: {class: 'label'}, placeholder: 'Enter a name' %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.input :comment, input_html: {class: 'textarea'}, wrapper: false, label_html: {class: 'label'}, placeholder: 'Enter a comment' %>
    </div>
  </div>
  <%= f.button :submit, class:"button is-primary" %>
<% end %>